@startuml
skinparam packageStyle rectangle
hide empty methods
hide empty fields

package "br.lostpets.project" {
  class ProjectApplication <<SpringBootApplication>>
}

package "br.lostpets.project.components" {
  class CadastroPessoaAnimalComponent <<Component>>
}

package "br.lostpets.project.controller" {
  class CadastroAnimalController <<Controller>>
  class CadastroPessoaController <<Controller>>
  class LoginController <<Controller>>
  class MensagensAlertas <<Helper>>
  class PetsPerdidosController <<Controller>>
  class PrincipalPageController <<Controller>>

  package "br.lostpets.project.controller.rest" {
    class AnimaisAchadosRestController <<RestController>>
    class PetPerdidosRestController <<RestController>>
  }
}

package "br.lostpets.project.service" {
  class AnimaisAchadosService <<Service>>
  class CriptografaDescriptografa <<Service>>
  class PdfRequestService <<Service>>
  class PetPerdidoService <<Service>>
  class ServiceGeral <<Service>>
  class SessionService <<Service>>
  class UsuarioService <<Service>>
  class ViaCep <<Service>>
}

package "br.lostpets.project.repository" {
  interface AnimaisAchadosRepository <<Repository>>
  class ConsultaUsuario <<Repository>>
  interface PetPerdidoRepository <<Repository>>
  interface UsuarioRepository <<Repository>>
}

package "br.lostpets.project.model" {
  class AnimaisAchados <<Entity>>
  class DonoPetPerdido <<Entity>>
  class Endereco <<ValueObject>>
  class InfoPet <<Entity>>
  class PetPerdido <<Entity>>
  class PontosUsuario <<Entity>>
  class Usuario <<Entity>>
}

package "br.lostpets.project.utils" {
  class ConverterCSV <<Utility>>
  class GoogleDriveConfig <<Config>>
  class HistoricoAcessoLog <<Utility>>
}

' Controllers -> Services
CadastroAnimalController ..> PetPerdidoService : uses
CadastroPessoaController ..> UsuarioService : uses
CadastroPessoaController ..> ViaCep : uses
LoginController ..> UsuarioService : uses
LoginController ..> SessionService : uses
LoginController ..> CriptografaDescriptografa : uses
PetsPerdidosController ..> PetPerdidoService : uses
PrincipalPageController ..> ServiceGeral : uses
AnimaisAchadosRestController ..> AnimaisAchadosService : uses
PetPerdidosRestController ..> PetPerdidoService : uses

' Services -> Repositories
AnimaisAchadosService ..> AnimaisAchadosRepository
PetPerdidoService ..> PetPerdidoRepository
UsuarioService ..> UsuarioRepository
UsuarioService ..> ConsultaUsuario

' Services -> Utils/Config
PdfRequestService ..> GoogleDriveConfig
PdfRequestService ..> ConverterCSV
ServiceGeral ..> HistoricoAcessoLog

' Repositories -> Entities (typical JPA generic binding)
AnimaisAchadosRepository ..> AnimaisAchados
PetPerdidoRepository ..> PetPerdido
UsuarioRepository ..> Usuario

' Services -> Models (value usage)
ViaCep ..> Endereco
PetPerdidoService ..> PetPerdido
UsuarioService ..> Usuario

@enduml